<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">
    <!--android:clickable="true"-->
    <!--android:focusable="false"-->


    <ImageView
        android:id="@+id/run_type_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/run_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="bottom"
            android:text="name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/day"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:text="type"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hours"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:text="type"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/avg_speed"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:text="type"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/current_total_time"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:text="type"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/current_total_distance"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:text="type"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/favListToggleButton"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_gravity="center|right"
            android:background="@drawable/trashcan01"
            android:checked="true"
            android:clickable="true"
            android:focusable="true"
            android:textOff=""
            android:textOn="" />

        <ImageView
            android:id="@+id/csv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:src="@drawable/import_csv" />
    </LinearLayout>
</LinearLayout>