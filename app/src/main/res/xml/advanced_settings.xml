<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/title_advanced_settings">


    <ListPreference
        android:defaultValue="@string/update_interval_by_default_ultimate"
        android:entries="@array/update_interval_by_labels"
        android:entryValues="@array/update_interval_by_values"
        android:key="@string/update_interval_by_key"
        android:title="@string/update_interval_by_label" />

    <CheckBoxPreference
        android:id="@+id/disable_auto_stop"
        android:key="@string/disable_auto_stop_switch_key"
        android:summaryOff="Off"
        android:summaryOn="On"
        android:title="@string/disable_auto_stop_switch_label" />

    <ListPreference
        android:id="@+id/auto_stop"
        android:defaultValue="@string/delete_loops_by_default_ultimate"
        android:entries="@array/delete_loops_by_labels"
        android:entryValues="@array/delete_loops_by_values"
        android:key="@string/delete_loops_by_key"
        android:title="@string/delete_loops_by_label" />

    <CheckBoxPreference
        android:id="@+id/theme"
        android:key="@string/theme_switch_key"
        android:summaryOff="Off"
        android:summaryOn="On"
        android:title="@string/theme_switch_label" />

    <CheckBoxPreference
        android:id="@+id/screen_on"
        android:key="@string/screen_on_switch_key"
        android:summaryOff="Off"
        android:summaryOn="On"
        android:title="@string/screen_on_switch_label" />

</PreferenceScreen>